<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".MainPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/semiTransparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            android:gravity="left">
            <!-- android:layout_marginRight="95dp" -->
            <TextView
                android:id="@+id/instab"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="AncientQuizz"
                android:textAlignment="center"
                android:textColor="@color/niceWhite"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="end"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true">


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/niceWhite"
                android:fontFamily="@font/jfsgjsfg"
                android:gravity="center"
                android:text="Contact"
                android:textAlignment="center"
                android:textColor="@color/backgroundGray"
                app:cornerRadius="15dp"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/rgbline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="ExtraText"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/niceWhite"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="@font/montserrat"
            android:text="HistoryQuiz"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:backgroundTint="@color/backgroundGray"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:fontFamily="@font/montserrat"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundGray"
            android:fontFamily="@font/montserrat"
            android:textSize="17dp"
            android:text="start game"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:backgroundTint="@color/backgroundGray"
            android:text="Profile"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundGray"
            android:fontFamily="@font/montserrat"
            android:textSize="17dp"
            android:text="log out"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>