<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".MainPage">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/semiTransparent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:gravity="center">
            <!-- android:layout_marginRight="95dp" -->
            <TextView
                android:id="@+id/instab"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Timeless-Trivia"
                android:textAlignment="center"
                android:textColor="@color/niceWhite"
                android:textFontWeight="800"
                android:textSize="20dp" />
        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/rgbline"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="0dp"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="ExtraText">

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textColor="@color/niceWhite"-->
        <!--            android:gravity="center"-->
        <!--            android:textFontWeight="800"-->
        <!--            android:textSize="25dp"-->
        <!--            android:fontFamily="@font/montserrat"-->
        <!--            android:text=""/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:backgroundTint="#FFEB3B"
                android:fontFamily="@font/montserrat"
                android:text="About us"
                android:textAllCaps="false"
                android:textColor="@color/backgroundGray"
                android:textFontWeight="800"
                android:textSize="17dp"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:backgroundTint="@color/niceWhite"
                android:fontFamily="@font/montserrat"
                android:text="Backstory"
                android:id="@+id/backstoryPage"
                android:textAllCaps="false"
                android:textColor="@color/backgroundGray"
                android:textFontWeight="800"
                android:textSize="17dp"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:backgroundTint="#2196F3"
                android:fontFamily="@font/montserrat"
                android:text="Start"
                android:textAllCaps="false"
                android:textColor="#1D1D1D"
                android:textFontWeight="800"
                android:textSize="20dp"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profileBtn"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:backgroundTint="@color/niceWhite"
                android:fontFamily="@font/montserrat"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="@color/backgroundGray"
                android:textFontWeight="800"
                android:textSize="17dp"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>